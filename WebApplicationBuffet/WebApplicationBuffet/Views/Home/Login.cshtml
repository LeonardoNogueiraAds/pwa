@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>





<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/LoginCss.css" />
<div class="form-group d-flex justify-content-center">
    <img src="https://img1.gratispng.com/20180319/epw/kisspng-india-login-computer-icons-emoticon-medicine-user-login-icon-5ab05c8bc2f8d1.4479395815215074677986.jpg" width="100px" alt="Fuzzy Cardigan"
         class="img-thumbnail img-responsive">
</div>

<div class="container ">

    <form>

        <div class="form-group">
            <div class="   col-md-6 offset-md-3">
                <label> Usuário ou E-MAIL</label>
                <input type="text" name="login" class="form-control " placeholder=" Usuário ou E-MAIL">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <label> Senha </label>
                <input type="password" name="rg" class="form-control" placeholder="SENHA">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <button type="submit" class="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="ajuda">Submit</button>
            </div>
        </div>
    </form>
</div>
